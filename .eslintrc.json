{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    // override configuration set by extending "eslint:recommended"
    "no-unused-vars": "off",
    "no-redeclare": "off",
    "no-constant-condition": ["error", { "checkLoops": false }]
  }
}
